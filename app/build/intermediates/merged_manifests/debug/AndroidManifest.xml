<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iris.ccpm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.iris.ccpm.model.GlobalData"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.CCPM" >

        <!-- 登录界面 -->
        <activity
            android:name="com.iris.ccpm.LoginActivity"
            android:theme="@style/Theme.CCPM.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页面 -->
        <activity
            android:name="com.iris.ccpm.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CCPM.NoActionBar" />
        <activity
            android:name="com.iris.ccpm.ProjectDetailActivity"
            android:label="项目详情" />
        <activity
            android:name="com.iris.ccpm.CreateProjectActivity"
            android:label="新建项目" />
        <activity
            android:name="com.iris.ccpm.ReportActivity"
            android:label="汇报任务" />
        <activity
            android:name="com.iris.ccpm.ui.setting.EditAccountActivity"
            android:label="修改资料" />
        <activity
            android:name="com.iris.ccpm.NotifyActivity"
            android:label="通知" />
        <activity
            android:name="com.iris.ccpm.TaskDetailActivity"
            android:label="任务详情" />
        <activity
            android:name="com.iris.ccpm.MemberDetailActivity"
            android:label="成员资料" />
    </application>

</manifest>