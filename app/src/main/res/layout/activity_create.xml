<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProjectActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/purple"
                android:text="填写项目信息"/>

            <LinearLayout style="@style/LoginBar">

                <TextView
                    style="@style/Title"
                    android:text="项目名称:" />

                <EditText
                    android:id="@+id/et_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="项目名称（必填）"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout style="@style/LoginBar">

                <TextView
                    style="@style/Title"
                    android:text="截止时间:"/>

                <TextView
                    style="@style/Title"
                    android:id="@+id/date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="截止时间（必填）" />

            </LinearLayout>


            <LinearLayout style="@style/LoginBar">

                <TextView
                    style="@style/Title"
                    android:text="项目计划:" />

            </LinearLayout>

            <LinearLayout style="@style/LoginBar">

                <EditText
                    android:id="@+id/et_project_plan"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/textarea_bg"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:padding="5dp"
                    android:hint="简单介绍一下项目计划吧"/>

            </LinearLayout>

            <LinearLayout style="@style/LoginBar">

                <TextView
                    style="@style/Title"
                    android:text="项目简介:" />

            </LinearLayout>

            <LinearLayout style="@style/LoginBar">

                <EditText
                    android:id="@+id/et_project_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/textarea_bg"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:padding="5dp"
                    android:hint="简单介绍一下项目吧"/>

            </LinearLayout>

            <Button
                android:id="@+id/create_project"
                style="@style/Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="创建项目" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>