<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="15dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/project_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="项目图标"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/project_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="项目名称"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/project_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="14dp"
                    android:text="xxx创建于xxxx年xx月xx日"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/project_motto_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="项目项目项目项目项目项目"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            style="@style/introTitle"
            android:text="项目周期" />

        <TextView
            android:id="@+id/project_time_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="xxxx年xx月xx日 - xxxx年xx月xx日"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            style="@style/introTitle"
            android:text="项目计划" />

        <TextView
            android:id="@+id/project_plan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="plan"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            style="@style/introTitle"
            android:text="任务统计" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:padding="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.33"
                    android:text="未完成"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.33"
                    android:text="已完成"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.33"
                    android:text="已逾期"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ing_number"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0.33"
                    android:text="01"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/done_number"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0.33"
                    android:text="01"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/overdue_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="01"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.33"
                    android:text="待认领"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.33"
                    android:text="今日到期"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.33"
                    android:text="任务总数"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/noclaim_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.33"
                    android:text="01"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/expiretoday_number"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0.33"
                    android:text="01"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/count_number"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0.33"
                    android:text="01"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp" />
            </TableRow>
        </TableLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/member_number"
                style="@style/introTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="项目成员"/>

            <Button
                android:id="@+id/bt_member_add"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="添加成员"/>

            <ListView
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/member_number"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/lv_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
</ScrollView>