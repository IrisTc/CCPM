<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_gray"
    tools:context=".ReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/white"
        android:elevation="5dp">

        <TextView
            android:id="@+id/QuestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="任务名称"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2.5dp"
                app:srcCompat="@drawable/ic_complete" />

            <TextView
                android:id="@+id/CompleteStateLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="完成状态"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2.5dp"
                app:srcCompat="@drawable/ic_executor" />

            <TextView
                android:id="@+id/ExecuteStateLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="执行状态"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/ExecuteState"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2.5dp"
                app:srcCompat="@drawable/personal" />

            <TextView
                android:id="@+id/ExecuterLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="执行者" />

            <TextView
                android:id="@+id/Executer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="vilson"
                android:textColor="#888888" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timeSetLayout"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginTop="2.5dp"
                app:srcCompat="@drawable/ic_time" />

            <TextView
                android:id="@+id/TimeLabel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="时间" />

            <TextView
                android:id="@+id/StartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="设置开始时间" />

            <TextView
                android:id="@+id/EndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:clickable="true"
                android:text="设置截止时间" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2.5dp"
                app:srcCompat="@drawable/ic_note" />

            <TextView
                android:id="@+id/NoteLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="备注" />

            <TextView
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:text="添加备注"
                android:textColor="#888888"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2.5dp"
                app:srcCompat="@drawable/ic_prio" />

            <TextView
                android:id="@+id/PriorityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="紧急程度" />

            <Spinner
                android:id="@+id/prioritySpinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="任务汇报"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RelativeLayout
            style="@style/ReportBar"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/CompleteStateLabel1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="工作时间"
                android:textColor="#888888" />

            <Spinner
                android:id="@+id/completeSpinner1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp" />

        </RelativeLayout>

        <LinearLayout
            style="@style/ReportBar"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="工作汇报" />

            <EditText
                android:id="@+id/et_report_text"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@color/white"
                android:minLines="5"
                android:text="请输入"
                android:textColor="#888888"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            style="@style/ReportBar"
            android:layout_height="40dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="剩余工时"
                android:textColor="#888888" />



        </RelativeLayout>

        <RelativeLayout
            style="@style/ReportBar"
            android:layout_height="40dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="任务状态"
                android:textColor="#888888" />

            <Spinner
                android:id="@+id/completeSpinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>